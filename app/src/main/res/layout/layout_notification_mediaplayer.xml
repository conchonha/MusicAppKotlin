<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EFEEEE">

    <ImageView
        android:id="@+id/mImgAlbum"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:src="@drawable/img_music_error"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp" />

    <TextView
        android:id="@+id/mTxtName"
        style="@style/TextAppearance.Compat.Notification.Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_toEndOf="@id/mImgAlbum"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/mTxtTitle"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTxtName"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_toEndOf="@id/mImgAlbum"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/mTxtDuration"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTxtTitle"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_toEndOf="@id/mImgAlbum"
        android:text="@string/app_name" />


    <LinearLayout
        android:id="@+id/mLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mImgAlbum"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/lineborder"
        android:backgroundTint="#ccc"
        android:gravity="center"
        android:weightSum="5">

        <ImageView
            android:id="@+id/mImgPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_skip_previous"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/mImgPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/mImgNext"
            android:src="@drawable/ic_skip_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/mImgClose"
            android:src="@drawable/ic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
    </LinearLayout>
</RelativeLayout>